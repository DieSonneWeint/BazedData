<Window x:Class="Bazed.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Bazed"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid x:Name ="GridMW">
        <Grid.RowDefinitions>
            <RowDefinition Height="185*"/>
            <RowDefinition Height="86*"/>
            <RowDefinition Height="163*"/>
        </Grid.RowDefinitions>
        <Label Content="ДОБРО ПОЖАЛОВАТЬ" HorizontalAlignment="Center" Margin="0,39,0,0" VerticalAlignment="Top" FontSize="48"/>
        <Button Content="Авторизация" HorizontalAlignment="Center"  VerticalAlignment="Top" Height="58" Width="144" FontSize="20" Click="SignInBtn_Click"  Grid.Row="1"/>
        <Button IsEnabled="False" Content="Регистрация" HorizontalAlignment="Center" VerticalAlignment="Top" Height="58" Width="144" Click="AddUserBtn_Click" Grid.Row="3" Grid.RowSpan="3"/>

    </Grid>
</Window>
